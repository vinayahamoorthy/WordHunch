<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.daksh.wordhunch.Menu.ActivityAbout">

    <LinearLayout
        android:id="@+id/aboutPage_introBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/purpleLight">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/AboutPage_Heading"
            android:textColor="@color/WhiteTextColorOne"
            android:textSize="40sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/aboutPage_introBox_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/AboutPage_Intro"
            android:textColor="@color/WhiteTextColorOne"
            android:textAppearance="@style/MyTextAppearance.Large.White" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/aboutPage_heading_version_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_below="@id/aboutPage_introBox"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/aboutPage_heading_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textAppearance="@style/MyTextAppearance.Large.Black"
            android:text="@string/AboutPage_heading_version"/>

        <TextView
            android:id="@+id/aboutPage_text_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textAppearance="@style/MyTextAppearance.Normal.Black"
            android:layout_below="@id/aboutPage_heading_version" />

    </RelativeLayout>

    <View
        android:id="@+id/aboutPage_div_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/purpleLight"
        android:layout_below="@id/aboutPage_heading_version_box"
        android:alpha="0.2"/>

    <RelativeLayout
        android:id="@+id/aboutPage_heading_github_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutPage_div_one"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/aboutPage_heading_github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textAppearance="@style/MyTextAppearance.Large.Black"
            android:text="@string/AboutPage_heading_github"/>

        <TextView
            android:id="@+id/aboutPage_text_github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textAppearance="@style/MyTextAppearance.Normal.Black"
            android:layout_below="@id/aboutPage_heading_github"
            android:text="View this project on GitHub. Tap to navigate."/>
    </RelativeLayout>

    <View
        android:id="@+id/aboutPage_div_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/purpleLight"
        android:layout_below="@id/aboutPage_heading_github_box"
        android:alpha="0.2"/>

    <RelativeLayout
        android:id="@+id/aboutPage_heading_libraries_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutPage_div_two"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/aboutPage_heading_libraries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textAppearance="@style/MyTextAppearance.Large.Black"
            android:text="@string/AboutPage_heading_libraries"/>

        <TextView
            android:id="@+id/aboutPage_text_libraries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textAppearance="@style/MyTextAppearance.Normal.Black"
            android:layout_below="@id/aboutPage_heading_libraries"
            android:text="Tap to view licenses"/>
    </RelativeLayout>
</LinearLayout>