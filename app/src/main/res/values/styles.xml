<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme.MainMenu" parent="AppTheme">
        <item name="android:background">@color/blackTransparentBackground</item>
    </style>

    <style name="MyTheme.About" parent="AppTheme">s
    </style>

    <style name="MyTextAppearance.Large.Black" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blackTextColorTwo</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>

    <style name="MyTextAppearance.Normal.Black" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blackTextColorOne</item>
        <item name="android:textSize">@dimen/abc_text_size_menu_material</item>
    </style>

    <style name="MyTextAppearance.Large.White" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/WhiteTextColorOne</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MyTextAppearance.ExtraLarge.White" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/WhiteTextColorOne</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>