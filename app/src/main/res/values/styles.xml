<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
    </style>

    <!-- universal toolbar title style -->
    <style name="Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
        parent="MyTextAppearance.Large.White" tools:override="true">
        <item name="android:textColor">@color/WhiteTextColorOne</item>
    </style>

    <!-- Main menu activity theme -->
    <style name="MyTheme.MainMenu" parent="AppTheme">
        <item name="android:background">@color/blackTransparentBackground</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Text appearance styles -->
    <style name="MyTextAppearance.Large.Black" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blackTextColorTwo</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>

    <style name="MyTextAppearance.Normal.Black" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blackTextColorOne</item>
        <item name="android:textSize">@dimen/abc_text_size_menu_material</item>
    </style>

    <style name="MyTextAppearance.Small.Black" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blackTextColorOne</item>
        <item name="android:textSize">@dimen/abc_text_size_caption_material</item>
    </style>

    <style name="MyTextAppearance.Large.White" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/WhiteTextColorOne</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MyTextAppearance.ExtraLarge.White" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/WhiteTextColorOne</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>